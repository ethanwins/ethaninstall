#!/bin/sh
clear
echo  "ethaninstall's git should download in 3 seconds"
sleep 1
echo "2"
sleep 1
echo "1"
sleep 1
clear
sudo pacman -S git go
cd 
git clone https://aur.archlinux.org/yay
cd yay
makepkg -si
yay -S figlet lolcat unzip wget kitty zsh fastfetch discord cmatrix-git asciiquarium-transparent-git cava flatpak btop vim zen-browser-bin pipes.sh tty-clock vscodium-bin libreoffice-fresh pokeshell ttf-jetbrains-mono-nerd eog reflector zsh-autosuggestions zsh-syntax-highlighting obsidian gnome-characters obsidian obs-studio nwg-look ttf-ms-fonts otf-san-francisco audacity kdenlive
clear
flatpak install sober
clear
figlet -c ethaninstall is done! | lolcat -a -s 90 -p 2
sleep 5
exit
